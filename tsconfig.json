{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cli/*": ["src/cli/*"],
      "@core/*": ["src/core/*"],
      "@utils/*": ["src/utils/*"],
      "@handlers/*": ["src/handlers/*"],
      "@models/*": ["src/models/*"]
    }
  },
  "include": ["src/**/*"]
}
