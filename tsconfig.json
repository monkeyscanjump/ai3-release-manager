{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cli/*": ["src/cli/*"],
      "@core/*": ["src/core/*"],
      "@utils/*": ["src/utils/*"],
      "@handlers/*": ["src/handlers/*"],
      "@models/*": ["src/models/*"]
    }
  },
  "include": ["src/**/*"]
}
